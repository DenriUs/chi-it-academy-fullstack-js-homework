name: Deploy to GitHub Pages

on:
  workflow_dispatch:
    inputs:
      folder:
        description: 'Folder to deploy'
        required: true
        default: 'dist'

permissions:
  contents: read
  pages: write
  id-token: write

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      
      - uses: actions/configure-pages@v4
      
      - uses: actions/upload-pages-artifact@v3
        with:
          path: ${{ inputs.folder }}
      
      - uses: actions/deploy-pages@v4
